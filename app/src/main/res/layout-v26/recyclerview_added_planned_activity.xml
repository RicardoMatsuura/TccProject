<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewPlannedActivities"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:minHeight="48dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="48dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="61"
            android:paddingStart="8dp"
            android:gravity="start|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewAddedPlannedActivityDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="start|center_vertical"
                android:text="@string/name_colon"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewFixAddedPlannedGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goal_colon"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewVariableGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goal_colon"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal"
                android:hyphenationFrequency="none">
                <TextView
                    android:id="@+id/textViewFixActivitiesDone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/done_colon"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewVariableActivitiesDone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textViewPercentageDone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    />
            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/materialButtonAddActivityDone"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:tooltipText="Add Activity Done"
            app:icon="@android:drawable/ic_input_add"
            app:iconPadding="0dp"
            app:iconTint="#2196F3"
            app:iconGravity="textStart"
            android:layout_weight="13"/>

        <Button
            android:id="@+id/materialButtonEditPlannedActivity"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetRight="0dp"
            android:insetLeft="0dp"
            android:tooltipText="Edit Planned Activity"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconPadding="0dp"
            app:iconGravity="textStart"
            app:iconTint="#FF9800"
            android:layout_weight="13"/>

        <Button
            android:id="@+id/materialButtonDeletePlannedActivity"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:tooltipText="Delete Planned Activity"
            app:icon="@android:drawable/ic_delete"
            app:iconPadding="0dp"
            app:iconTint="#FF0000"
            app:iconGravity="textStart"
            android:layout_weight="13"
            android:layout_marginEnd="8dp"/>


    </LinearLayout>


</androidx.cardview.widget.CardView>